<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Gator Tot's BS Game Lobby</title>
    <%- include('shared/head') %>
  </head>
  <body>
    <div id="container">
      <%- include('shared/menu') %>
      <h1>
        
        Welcome, <%= username %>!
      </h1>

      Game name: <%= game_name %>
    </div>
  </body>

  <script>
  const IS_HOST = <%= isHost ? "true" : "false" %>;
  const GAME_ID = <%= gameId %>;
  window.addEventListener("beforeunload", function (e) {
      navigator.sendBeacon(`/games/leave/${GAME_ID}`);    
  });
</script>
</html>